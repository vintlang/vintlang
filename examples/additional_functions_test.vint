// examples/additional_functions_test.vint
// Test the additional functions: sort, random functions, and parsing functions

println("=== Testing Additional Functions ===\n")

// ===== ARRAY SORT FUNCTION =====
println("=== Array Sort Function ===")

let numbers = [5, 2, 8, 1, 9, 3]
println("Original array:", numbers)
println("Sorted array:", sort(numbers))

let strings = ["banana", "apple", "cherry", "date"]
println("Original strings:", strings)
println("Sorted strings:", sort(strings))

let mixed = [3, 1.5, 2, 4.7, 1]
println("Mixed numbers:", mixed)
println("Sorted mixed:", sort(mixed))

// ===== RANDOM FUNCTIONS =====
println("\n=== Random Functions ===")

println("rand() generates random float 0.0-1.0:")
for i in range(5) {
    println("  rand() =", rand())
}

println("\nrandInt(10) generates random int 0-9:")
for i in range(5) {
    println("  randInt(10) =", randInt(10))
}

println("\nrandInt(5, 15) generates random int 5-14:")
for i in range(5) {
    println("  randInt(5, 15) =", randInt(5, 15))
}

// ===== PARSING FUNCTIONS =====
println("\n=== Parsing Functions ===")

println("parseInt() function:")
println("  parseInt('123') =", parseInt("123"))
println("  parseInt('-456') =", parseInt("-456"))
println("  parseInt('0') =", parseInt("0"))

println("\nparseFloat() function:")
println("  parseFloat('3.14') =", parseFloat("3.14"))
println("  parseFloat('-2.5') =", parseFloat("-2.5"))
println("  parseFloat('123') =", parseFloat("123"))
println("  parseFloat('0.001') =", parseFloat("0.001"))

// ===== COMBINED USAGE EXAMPLES =====
println("\n=== Combined Usage Examples ===")

// Example: Generate random array and sort it
let randomArray = []
for i in range(10) {
    randomArray = append(randomArray, randInt(1, 100))
}
println("Random array:", randomArray)
println("Sorted random array:", sort(randomArray))

// Example: Parse strings and work with results
let numberStrings = ["10", "5", "25", "3", "17"]
let parsedNumbers = []
for str in numberStrings {
    parsedNumbers = append(parsedNumbers, parseInt(str))
}
println("String numbers:", numberStrings)
println("Parsed numbers:", parsedNumbers)
println("Sorted parsed numbers:", sort(parsedNumbers))

println("\n=== All Additional Function Tests Completed! ===")

println("\nNew functions in this batch:")
println("- sort(array): Sort array elements")
println("- rand(): Generate random float 0.0-1.0")
println("- randInt(max): Generate random int 0 to max-1")
println("- randInt(min, max): Generate random int min to max-1")
println("- parseInt(string): Parse string to integer")
println("- parseFloat(string): Parse string to float")