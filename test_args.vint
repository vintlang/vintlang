// Test the args functionality
println("Testing args() builtin function:")

// Get all arguments
let allArgs = args()
println("All args:", allArgs)

// Test CLI module functions
import cli

println("\nTesting cli.args():")
let cliArgs = cli.args()
println("CLI args:", cliArgs)

println("\nTesting cli.getFlags():")
let flags = cli.getFlags()
println("Flags:", flags)

println("\nTesting cli.getPositional():")
let positional = cli.getPositional()
println("Positional args:", positional)

println("\nTesting individual flag checks:")
// Check for verbose flag
if (cli.hasArg("--verbose")) {
    println("Verbose mode enabled via hasArg")
}

// Get a specific flag value
let outputValue = cli.getArgValue("--output")
if (outputValue) {
    println("Output file from getArgValue:", outputValue)
}

// Demonstrate the simple usage pattern from the GitHub issue:
println("\nSimple usage pattern:")
println("args() =", args())
if (cli.hasArg("--verbose")) {
    println("Verbose mode enabled")
}
