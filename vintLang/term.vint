import term

// Colored output
term.print("Hello in red!", "red")
term.println("Hello in green!", "green")
term.println("Hello in blue!", "blue")

// Styled text
let styled = term.style("Bold and underlined text", {
    "color": "yellow",
    "bold": "true",
    "underline": "true"
})
term.println(styled)

// Boxed text
let boxed = term.box("This text is in a box!")
term.println(boxed)

// Table
let table = term.table([
    ["Name", "Age", "City"],
    ["John", "25", "New York"],
    ["Alice", "30", "London"],
    ["Bob", "28", "Paris"]
])
term.println(table)

