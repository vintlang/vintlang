// Spinner
let spinner = term.spinner("Loading...")
time.sleep(2000) // Wait for 2 seconds
spinner() // Stop the spinner

// Cursor control
term.cursor(false) // Hide cursor
time.sleep(1000)
term.cursor(true) // Show cursor

// Clear screen
term.clear()

// Beep
term.beep()

// Example of a loading process with spinner and progress
